@model WorkflowENG.Dal.ViewModels.FlowViewModel
@using OptimaJet.Workflow.Core.Runtime
@{
    ViewBag.Title = "CheckForNextStep";
}

<h2>CheckForNextStep</h2>
<form method="post" class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model=>model.DataModel.Id)
    @Html.HiddenFor(model=>model.DataModel.WorkflowInstanceId)
    @Html.HiddenFor(model=>model.DataModel.WorkflowSchemeName)
    @Html.HiddenFor(model=>model.DataModel.SampleFormId)
    @Html.HiddenFor(model=>model.DataModel.CreateDate)
    @Html.HiddenFor(model=>model.DataModel.RowVersion)


    <div class="form-group">
        <label class="control-label col-md-2"></label>
        <div class="col-md-10">
            <select id="DataModel_CurrentStateId" name="DataModel.CurrentStateId" class="form-control">
                <option value="none" selected disabled hidden>انتخاب کنید...</option>
                @foreach (var item in Model.CommandList as IEnumerable<WorkflowCommand>)
                {
                    <option value="@item.CommandName">@item.CommandName</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</form>