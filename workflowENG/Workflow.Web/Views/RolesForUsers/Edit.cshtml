@model WorkflowENG.Dal.ViewModels.RolesViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>RolesForUsers</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.DataModel.Id)
    @Html.HiddenFor(model => model.DataModel.CreateDate)
    @Html.HiddenFor(model => model.DataModel.RowVersion)

    <div class="form-group">
        @Html.LabelFor(model => model.DataModel.RoleName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DataModel.RoleName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DataModel.RoleName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Parent</label>
        <div class="col-md-10">
            <select class="form-control" id="DataModel_ParentId" name="DataModel.ParentId">
                @foreach (var item in Model.DataModels)
                {
                    <option value="@item.Id">@item.RoleName</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
